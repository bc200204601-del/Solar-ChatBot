    <script>
        // Replace YOUR_AGENT_ID with your actual Dialogflow agent ID
        const agentId = "https://console.dialogflow.com/api-client/demo/embedded/728466b3-b1f9-4094-9b64-ece38da84ac2">";
        const chatFrame = document.querySelector('.chat-iframe');

        function sendToChat(message) {
            // Update iframe src with the message as a query parameter
            const newSrc = `https://dialogflow.cloud.google.com/v1/integrations/webdemo/agent/${agentId}?query=${encodeURIComponent(message)}`;
            chatFrame.src = newSrc;
            
            // Scroll to chat after a short delay
            setTimeout(() => {
                document.querySelector('.chat-container').scrollIntoView({ behavior: 'smooth' });
            }, 500);
        }

        // Add some interactivity to buttons
        document.querySelectorAll('.action-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                // Visual feedback
                this.style.transform = 'scale(0.95)';
                setTimeout(() => {
                    this.style.transform = '';
                }, 200);
            });
        });
    </script>
